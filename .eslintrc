{
    "extends": ["eslint:recommended", "google", "prettier"],
    "globals": {
      "expect": "writable",
      "assert": "writable",
      "sinon": "writable"
    },
    "plugins": ["prettier"],
    "env": {
      "es6": true,
      "node": true
    },
    "parserOptions": { "ecmaVersion": 9, "sourceType": "module" },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "trailingComma": "es5",
          "tabWidth": 2,
          "printWidth": 80,
          "semi": true,
          "singleQuote": true,
          "arrowParens": "always"
        }
      ],
      "indent": ["error", 2, { "SwitchCase": 1 }],
      "no-invalid-this": 0,
      "require-jsdoc": 0,
      "max-len": [
        "error",
        {
          "code": 80,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true,
          "ignorePattern":
            "^require [^,]+ from |^export | implements | extends | await"
        }
      ]
    }
  }